					}
					else if(day == 6)
					{
						for(spaces = 0; spaces <= day; spaces++)
						{
							System.out.printf("%s", " ");
						}
					} */
				
				if(month == 1) {
					dayOne = day;
				}
				else if(month == 2) {
					dayOne = day + 3;
				}
				else if(month == 3) {
					dayOne = day + 3;
				}
				else if(month == 4) {
					dayOne = day + 6;
				}
				else if(month == 5) {
					dayOne = day + 8;
				}	
				else if(month == 6) {
					dayOne = day + 11;
				}	
				else if(month == 7) {
					dayOne = day + 13;
				}
				else if(month == 8) {
					dayOne = day + 16;
				}	
				else if(month == 9) {
					dayOne = day + 19;
				}				
				else if(month == 10) {
					dayOne = day + 21;
				}							
				else if(month == 11) {
					dayOne = day + 24;
				}										
				else if(month == 12) {
					dayOne = day + 26;
				}	
																						
				if(((year % 4 == 0 ) && (year % 100 != 0)) || (year % 400 == 0))
					if(month == 1) {
						dayOne = day;
					}
					else if(month == 2) {
						dayOne = day + 3;
					}
					else if(month == 3) {
						dayOne = day + 4;
					}
					else if(month == 4) {
						dayOne = day + 7;
					}
					else if(month == 5) {
						dayOne = day + 9;
					}	
					else if(month == 6) {
						dayOne = day + 12;
					}	
					else if(month == 7) {
						dayOne = day + 14;
					}
					else if(month == 8) {
						dayOne = day + 17;
					}	
					else if(month == 9) {
						dayOne = day + 20;
					}				
					else if(month == 10) {
						dayOne = day + 22;
					}							
					else if(month == 11) {
						dayOne = day + 25;
					}										
					else if(month == 12) {
						dayOne = day + 27;
					}	
				
				if((dayOne % 7) >= 0)
				{
					if((dayOne % 7) == 0) {
								; 
					}
					else if((dayOne % 7) == 1) {
						System.out.print("  ");
					}
					else if((dayOne % 7) == 2) {
						System.out.print("\t\t  ");
					}
					else if((dayOne % 7) == 3) {
						System.out.print("\t\t\t   ");
					}
					else if((dayOne % 7) == 4) {
						System.out.print("\t\t\t\t\t");
					}
					else if((dayOne % 7) == 5) {
						System.out.print("\t\t\t\t\t\t ");
					}
					else if((dayOne % 7) == 6) {
						System.out.print("\t\t\t\t\t\t  ");
					}
				} 
				
				for(i = 1; i <= numOfDays; i++) 
				{
					if(i < 10)
						System.out.print("   " + i);
					else
						System.out.print("  " + i);
					
					if((i + dayOne) % 7 == 0)
						System.out.println();
				}
				System.out.println();
			}		
		input.close();
	}
}
